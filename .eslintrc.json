{
    "parser": "@typescript-eslint/parser", // Specifies the ESLint parser
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended", // Uses recommended rules from @typescript-eslint
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:node/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2022, // Allows modern ECMAScript features
        "sourceType": "module" // Allows for the use of imports
    },
    "rules": {
        "import/prefer-default-export": "off", // Allow named exports
        "@typescript-eslint/no-unused-vars": ["error"], // Show error for unused variables
        "no-console": "off" // Allow console logs
    },
    "env": {
        "node": true, // Enable Node.js global variables
        "jest": true // Enable Jest global variables if you're using Jest for testing
    }
}